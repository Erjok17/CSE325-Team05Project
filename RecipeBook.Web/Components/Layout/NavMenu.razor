@rendermode InteractiveServer
@using Microsoft.AspNetCore.Identity
@using RecipeBook.Web.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject NavigationManager Nav

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">RecipeBook.Web</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick:stopPropagation="true">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/recipes" @onclick:stopPropagation="true">
                <span class="bi bi-card-list" aria-hidden="true"></span> Recipes
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/recipes/new" @onclick:stopPropagation="true">
                <span class="bi bi-plus-circle-fill" aria-hidden="true"></span> New Recipe
            </NavLink>
        </div>
    </nav>

    <AuthorizeView>
        <Authorized>
            <div class="nav-item px-3 mt-3">
                <span class="nav-link disabled">
                    👋 @context.User.Identity?.Name
                </span>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/Identity/Account/Manage">
                    <span class="bi bi-person-circle" aria-hidden="true"></span> Profile
                </a>
            </div>

            <div class="nav-item px-3">
                <a class="nav-link"
                   href="/logout"
                   @onclick:stopPropagation="true">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                </a>
            </div>
        </Authorized>

        <NotAuthorized>
            <div class="nav-item px-3">
                <a class="nav-link" href="/Identity/Account/Login">
                    <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Login
                </a>
            </div>
            <div class="nav-item px-3">
                <a class="nav-link" href="/Identity/Account/Register">
                    <span class="bi bi-person-plus" aria-hidden="true"></span> Create account
                </a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private async Task Logout()
    {
        Console.WriteLine("Logging out...");
        await SignInManager.SignOutAsync();
        Nav.NavigateTo("/", forceLoad: true);
    }
}
